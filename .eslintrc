{
  "root": true,

  "plugins": ["prettier"],

  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "prettier"
  ],

  "parserOptions": {
    "ecmaVersion": "latest"
  },

  "env": {
    "es6": true,
    "browser": true
  },

  "globals": {
    "matchMedia": true
  },

  "rules": {
    "prettier/prettier": "error",
  }
}
